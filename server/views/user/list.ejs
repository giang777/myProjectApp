<%- include('../inc/index.ejs') %>
    <section class="home">
        <div class="container-xl" style="padding: 20px;">
            <h1>Danh sách tài khoản</h1>
            <br>
            <button type="submit" class="btn btn-primary" style="margin-bottom: 20px;">Thêm tài khoản</button>
            <br>
            <table class="table table-dark table-striped-columns">
                <thead>
                    <th>#</th>
                    <th>Tên</th>
                    <th>Tài khoản</th>
                    <th>Ảnh</th>
                </thead>
                <tbody>
                    <% list.forEach((item,index)=>{ %>
                        <tr>
                            <td>
                                <%= index+1 %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.username %>
                            </td>
                            <td><img src="<%= item.img %>" alt="" width="80" height="80"></td>
                            <td>
                                <button type="submit" class="btn btn-primary" style="margin-bottom: 20px;">Xem chi tiết</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </section>
    <%- include('../inc/footer.ejs') %>